<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <script src="~/Scripts/modernizr-2.6.2.js"></script>
    <link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Lato">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <style>
        body {
            font-family: "Lato", sans-serif
        }

    </style>
</head>
<body>
    <div class="w3-top">
        <div class="w3-bar w3-black w3-card">
            <a href="~/Home/Index" style ="text-decoration: none;" class="w3-bar-item w3-button w3-padding-large w3-hide-small">Training System</a>
            <a href="~/Home/Index" style ="text-decoration: none;" class="w3-bar-item w3-button w3-padding-large w3-hide-small">Home</a>
            <a href="~/Courses/Index" style ="text-decoration: none;" class="w3-bar-item w3-button w3-padding-large w3-hide-small">Courses</a>
            <a href="~/Topic/Index" style ="text-decoration: none;" class="w3-bar-item w3-button w3-padding-large w3-hide-small">Topic</a>

            <div class="nav navbar-nav navbar-right">
                @if (Session["ID"] != null)
                {
                    if (Session["Admin_Username"] != null)
                    {
                        <a href="~/Administrators/AdminDashBoard" style ="text-decoration: none;" class="w3-bar-item w3-button w3-padding-large w3-hide-small">Hello: @Session["Admin_UserName"].ToString()!</a>
                        <a href="~/Administrators/AdminDashBoard" style ="text-decoration: none;" class="w3-bar-item w3-button w3-padding-large w3-hide-small">Admin DashBoard</a>
                    }
                    else if (Session["Staff_Username"] != null)
                    {
                        <a href="~/TrainingStaff/StaffDashBoard" style ="text-decoration: none;" class="w3-bar-item w3-button w3-padding-large w3-hide-small">Hello: @Session["Staff_UserName"].ToString()!</a>
                        <a href="~/TrainingStaff/StaffDashBoard" style ="text-decoration: none;" class="w3-bar-item w3-button w3-padding-large w3-hide-small">Staff Dashboard</a>
                    }
                    else if (Session["Trainer_Username"] != null)
                    {
                        <a href="~/Trainer/TrainerDashBoard" style ="text-decoration: none;" class="w3-bar-item w3-button w3-padding-large w3-hide-small">Hello: @Session["Trainer_UserName"].ToString()!</a>
                        <a href="~/Trainer/TrainerDashBoard" style ="text-decoration: none;" class="w3-bar-item w3-button w3-padding-large w3-hide-small">Trainer Dashboard</a>

                    }
                    <a href="~/Home/Logout" style ="text-decoration: none;" class="w3-bar-item w3-button w3-padding-large w3-hide-small">Logout</a>
                }
                else
                {
                    <a href="~/Home/Login" style ="text-decoration: none;" class="w3-bar-item w3-button w3-padding-large w3-hide-small">Login</a>
                }
            </div>

        </div>
    </div>


    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Internal Training System Application</p>
        </footer>
    </div>

    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>

</body>
</html>