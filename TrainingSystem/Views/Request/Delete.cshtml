@model TrainingSystem.Models.Request

@{
    ViewBag.Title = "Delete";
}

<div class="container">
    <div class="row">
        <div class="col-md-12">
            <div>
                <h2>Delete Request</h2>
                <ul class="breadcrumb">
                    <li>@Html.ActionLink("Home", "Index", "Home")</li>
                    <li class="active">@Html.ActionLink("Detele Request", "Delete", "Request")</li>
                </ul>
            </div>
        </div>
    </div>
</div>

<div class="container">
    <div class="panel panel-default">
        <div class="panel-heading">
            @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-success" })

        </div>
        <div class="panel-body">
            <div class="col-md-12">
                <div class="row">
                    <div class="col-md-9">
                        <div class="col-md-12">
                            <h3>Request Information</h3>

                            <dl class="dl-horizontal">
                                <dt>
                                    @Html.DisplayNameFor(model => model.request_subject)
                                </dt>

                                <dd>
                                    @Html.DisplayFor(model => model.request_subject)
                                </dd>

                                <dt>
                                    @Html.DisplayNameFor(model => model.request_descriptions)
                                </dt>

                                <dd>
                                    @Html.DisplayFor(model => model.request_descriptions)
                                </dd>

                                <dt>
                                    @Html.DisplayNameFor(model => model.request_answer)
                                </dt>

                                <dd>
                                    @Html.DisplayFor(model => model.request_answer)
                                </dd>

                                <dt>
                                    @Html.DisplayNameFor(model => model.request_date)
                                </dt>

                                <dd>
                                    @Html.DisplayFor(model => model.request_date)
                                </dd>

                                <dt>
                                    @Html.DisplayNameFor(model => model.request_status)
                                </dt>

                                <dd>
                                    @Html.DisplayFor(model => model.request_status)
                                </dd>

                                <dt>
                                    @Html.DisplayNameFor(model => model.Trainer.trainer_username)
                                </dt>

                                <dd>
                                    @Html.DisplayFor(model => model.Trainer.trainer_username)
                                </dd>

                            </dl>

                            <h4>Are you sure you want to delete this?</h4>
                            @using (Html.BeginForm())
                            {
                                @Html.AntiForgeryToken()

                                <div class="form-actions no-color">
                                    <input type="submit" value="Delete" class="btn btn-danger" />
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
