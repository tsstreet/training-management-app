@using PagedList.Mvc;
@using PagedList;
@model IPagedList<TrainingSystem.Models.Trainer>

@{
    ViewBag.Title = "Trainer";
    //Layout = "~/Views/Shared/_Layout1.cshtml";
}

<div class="container">
    <div class="row">
        <div class="col-md-12">
            <div>
                <h2>Trainer</h2>
                <ul class="breadcrumb">
                    <li>@Html.ActionLink("Home", "Index", "Home")</li>
                    <li class="active">@Html.ActionLink("Trainer", "Index", "Trainer")</li>
                </ul>
            </div>
        </div>
    </div>
</div>

<div class="container">
    <div class="panel panel-default">
        <div class="panel-heading">
            <div class="row">
                <div class="col-md-6 col-xs-5">
                    @Html.ActionLink("Add New", "Create", null, new { @class = "btn btn-success pull-left col-md-2" })
                </div>

                <div class="input-group col-md-6 col-xs-7">
                    <span class="input-group-addon"><i class="glyphicon glyphicon-search"></i></span>
                    <input type="text" id="Search" placeholder="Search" class="form-control" />
                </div>
            </div>
        </div>
        <div class="panel-body">
            <div class="table-responsive">

                <table class="table">
                    <tr class="bg-primary">
                        <th>
                            @Html.DisplayNameFor(model => model.First().trainer_username)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.First().trainer_fullname)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.First().trainer_address)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.First().trainer_workingplace)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.First().trainer_phone)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.First().trainer_email)
                        </th>

                        <th></th>
                    </tr>

                    @foreach (var item in Model)
                    {
                        <tr class="Search">
                            <td>
                                @Html.DisplayFor(modelItem => item.trainer_username)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.trainer_fullname)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.trainer_address)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.trainer_workingplace)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.trainer_phone)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.trainer_email)
                            </td>
                            <td>
                                @Html.ActionLink("Edit", "Edit", new { id = item.trainerID }) |
                                @Html.ActionLink("Details", "Details", new { id = item.trainerID }) |
                                @Html.ActionLink("Delete", "Delete", new { id = item.trainerID })
                            </td>
                        </tr>
                    }

                </table>
            </div>
        </div>
        <div class="panel-footer">
            @Html.PagedListPager(Model, page => Url.Action("Index", new { page }))
        </div>
    </div>
</div>


<script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script>
        $(document).ready(function () {
            function Contains(text_one, text_two) {
                if (text_one.indexOf(text_two) != -1)
                    return true;
            }
            $("#Search").keyup(function () {
                var searchText = $("#Search").val().toLowerCase();
                $(".Search").each(function () {
                    if (!Contains($(this).text().toLowerCase(), searchText)) {
                        $(this).hide();
                    }
                    else {
                        $(this).show();
                    }
                });
            });
        });
    </script>
