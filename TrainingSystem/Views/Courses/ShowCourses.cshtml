@using PagedList.Mvc;
@using PagedList;
@model IPagedList<TrainingSystem.Models.Courses>

@{
    ViewBag.Title = "ShowCourses";
}

    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div>
                    <h2>Courses</h2>
                    <ul class="breadcrumb">
                        <li>@Html.ActionLink("Home", "Index", "Home")</li>
                        <li class="active">@Html.ActionLink("Courses", "ShowCourses", "Courses")</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>


<div class="row">

    <!-- Blog entries-->
    <div class="col-lg-8">
        <div class="row">
            @foreach (var item in Model)
            {
                <div class="col-lg-6 col-md-10">
                    <div class="thumbnail">
                        @*<div class="panel-body">*@
                            <img src="@Url.Content("~/Images/" + item.course_image )" class="image-responsive" style="width:100%; height:250px;" />
                            <div class="caption">
                                <h2>@Html.DisplayFor(modelItem => item.course_name)</h2>
                                <p>Lorem ipsum dolor sit amet, consectetur adipisicing elit. Reiciendis aliquid atque, nulla.</p>
                                @Html.ActionLink("Details", "Details", new { id = item.courseID }, new { @class = "btn btn-primary" })
                                @*</div>*@
                            </div>
                            
                    </div>
                </div>
            }

        </div>


        @Html.PagedListPager(Model, page => Url.Action("ShowCourses", new { page }))
    </div>
    <!-- Side widgets-->
    <div class="col-lg-4">
        <!-- Search widget-->
        <div class="panel panel-default">
            <div class="panel-body">
                <h4 class="text-center">Search for Course!</h4>
                <form>
                    <div class="form-group">
                        <div class="input-group">
                            <input class="form-control" type="text" name="search" placeholder="Search..." required />
                            <span class="input-group-btn">
                                <button class="btn btn-primary" type="submit"><span class="glyphicon glyphicon-search" aria-hidden="true"></span></button>
                            </span>
                        </div>
                    </div>                  
                </form>
                <div>
                    <hr />
                    <h4>Categories</h4>
                    <div>
                        <div class="row">
                            <div class="col-sm-6">                              
                                <ul class="mb-0">
                                    <li><a href="#!">Web Design</a></li>
                                    <li><a href="#!">HTML</a></li>
                                    <li><a href="#!">Freebies</a></li>
                                </ul>
                            </div>
                            <div class="col-sm-6">
                                <ul class="mb-0">
                                    <li><a href="#!">JavaScript</a></li>
                                    <li><a href="#!">CSS</a></li>
                                    <li><a href="#!">Tutorials</a></li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


